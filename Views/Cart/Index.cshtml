@model List<Product>

<h2>Your Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Remove</th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td><a href="/Cart/Remove/@product.Id">Remove</a></td>
            </tr>
        }
    </table>

    <a href="/Account/Login">Login or Register to Checkout</a>
}
